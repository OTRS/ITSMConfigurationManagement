<div class="MainBox ARIARoleMain">
    <h1>$Text{"Overview"}: $Text{"Config Item"}</h1>
    <div class="WidgetSimple">
        <div class="Content">
            <div class="ControlRow">
                <h2>
                    $Text{"Config Items shown"}: $QData{"Result"} -
                    $Text{"Page"}: $QData{"PageNull"}
                </h2>
                <div class="AdditionalInformation">
<!-- dtl:block:Page -->
<!-- dtl:block:PageNormal -->
                    <a href="$Env{"Baselink"}Action=$Env{"Action"}&ClassID=$QData{"ClassID"}&Page=$QData{"Page"}">$QData{"Page"}</a>
<!-- dtl:block:PageNormal -->
<!-- dtl:block:PageBold -->
                    <a href="$Env{"Baselink"}Action=$Env{"Action"}&ClassID=$QData{"ClassID"}&Page=$QData{"Page"}"><strong>$QData{"Page"}</strong></a>
<!-- dtl:block:PageBold -->
<!-- dtl:block:Page -->
                    $Text{"Config Items available"}: $QData{"ConfigItemsAvail"}
                </div>
            </div>
            <div class="ActionRow SpacingBottom">
                <ul class="Actions">
#$Text{"Class"}:
<!-- dtl:block:Menu -->
<!-- dtl:block:MenuItem -->
                    <li class="$QData{"Class"}">
                        <a href="$Env{"Baselink"}Action=$Env{"Action"}&ClassID=$QData{"ClassID"}">$QData{"Class"} ($QData{"Count"})</a>                    </li>
<!-- dtl:block:MenuItem -->
<!-- dtl:block:Menu -->
                    </ul>
                </div>
                <div class="Clear"></div>
<!-- dtl:block:Class -->
                <div class="ControlRow">
                    <h2>$Text{"Class"}: $QData{"Class"}</h2>
                </div>
                <div class="Content">
                    <table class="DataTable">
                        <thead>
                            <tr>
                                <th width="20">&nbsp;</th>
                                <th>$Text{"Number"}</th>
                                <th>$Text{"Name"}</th>
                                <th>$Text{"Deployment State"}</th>
                                <th width="150">$Text{"Last Change"}</th>
                            </tr>
                        </thead>
                        <tbody>
<!-- dtl:block:ClassRow -->
                            <tr>
                                <td title="$Text{"$Data{"CurInciState"}"}" class="Flags Fixed">
#                                <div title="$Text{"$QData{"CurInciState"}"}" class="Flag Small">
#                                    <span class="$Text{"$QData{"CurInciState"}"}State">$Text{"$QData{"CurInciState"}"}</span>
#                                </div>
#                            <img border="0" src="$Config{"Frontend::ImagePath"}$QData{"CurInciSignal"}.png" title="$Text{"$QData{"CurInciState"}"}" alt="$Text{"$QData{"CurInciState"}"}">
                                </td>
                                <td>
                                    <a href="$Env{"Baselink"}Action=AgentITSMConfigItemZoom&ConfigItemID=$QData{"ConfigItemID"}">$QData{"Number"}</a>
                                </td>
                                <td>$QData{"Name","40"}</td>
                                <td>$Text{"$Data{"CurDeplState"}"}</td>
                                <td class="W25pc">$TimeLong{"$QData{"CreateTime"}"}</td>
                            </tr>
<!-- dtl:block:ClassRow -->
                        </tbody>
                    </table>
                </div>
<!-- dtl:block:Class -->
            </div>
        </div>
    </div>